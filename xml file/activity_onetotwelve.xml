<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".onetotwelveActivity"
    android:gravity="center_vertical"

    >

    <TextView
        android:id="@+id/selectClass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"

        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"

        android:text="@string/select_your_class"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="402dp"
        android:layout_height="500dp"
        android:layout_below="@+id/selectClass"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="130dp"
        android:layout_marginRight="26dp"
        app:cardBackgroundColor="#FFECECEC"
        app:cardCornerRadius="20dp"


        >

        <Button
            android:id="@+id/button1"
            android:layout_width="130dp"
            android:layout_height="63dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/classdesign"
            android:drawableLeft="@drawable/ic_1"
            android:text="Class One"
            android:textStyle="bold"
            app:backgroundTint="@null">

        </Button>

        <Button
            android:id="@+id/button2"
            android:layout_width="130dp"
            android:layout_height="63dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="90dp"
            android:background="@drawable/classdesign"
            android:drawableLeft="@drawable/ic_2"
            android:text="Class Two"
            android:textStyle="bold"
            app:backgroundTint="@null">

        </Button>

        <Button
            android:id="@+id/button3"
            android:layout_width="130dp"
            android:layout_height="63dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="170dp"
            android:background="@drawable/classdesign"
            android:drawableLeft="@drawable/ic_baseline_looks_3"
            android:text="Class Three"
            android:textStyle="bold"
            app:backgroundTint="@null">

        </Button>

        <Button
            android:id="@+id/button4"
            android:layout_width="130dp"
            android:layout_height="63dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="250dp"
            android:background="@drawable/classdesign"
            android:drawableLeft="@drawable/ic_baseline_looks_4_24"
            android:text="Class Four"
            android:textStyle="bold"
            app:backgroundTint="@null">

        </Button>

        <Button
            android:id="@+id/button5"
            android:layout_width="130dp"
            android:layout_height="63dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="330dp"
            android:background="@drawable/classdesign"
            android:drawableLeft="@drawable/ic_baseline_looks_5_24"
            android:text="Class Five"
            android:textStyle="bold"
            app:backgroundTint="@null">

        </Button>

        <Button
            android:id="@+id/button6"
            android:layout_width="130dp"
            android:layout_height="63dp"

            android:layout_marginLeft="20dp"
            android:layout_marginTop="410dp"
            android:background="@drawable/classdesign"
            android:drawableLeft="@drawable/ic_baseline_looks_6_24"
            android:text="Class Six"
            android:textStyle="bold"
            app:backgroundTint="@null">

        </Button>

        <Button
            android:id="@+id/button7"
            android:layout_width="130dp"
            android:layout_height="63dp"

            android:layout_marginLeft="195dp"

            android:layout_marginTop="15dp"
            android:background="@drawable/classdesign"
            android:drawableLeft="@drawable/ic_baseline_filter_7_24"
            android:text="@string/class_seven"
            android:textStyle="bold"
            app:backgroundTint="@null">

        </Button>

        <Button
            android:id="@+id/button8"
            android:layout_width="130dp"
            android:layout_height="63dp"

            android:layout_marginStart="195dp"

            android:layout_marginTop="90dp"
            android:background="@drawable/classdesign"
            android:drawableLeft="@drawable/ic_baseline_filter_8_24"
            android:text="Class Eight"
            android:textStyle="bold"
            app:backgroundTint="@null">

        </Button>

        <Button
            android:id="@+id/button9"
            android:layout_width="130dp"
            android:layout_height="63dp"
            android:layout_marginLeft="195dp"
            android:layout_marginTop="165dp"
            android:background="@drawable/classdesign"
            android:drawableLeft="@drawable/ic_baseline_filter_9_24"
            android:text="Class SSC"
            android:textStyle="bold"
            app:backgroundTint="@null">

        </Button>



        <Button

            android:id="@+id/buttonHsc"
            android:layout_width="130dp"
            android:layout_height="63dp"
            android:layout_marginLeft="195dp"
            android:layout_marginTop="245dp"
            android:background="@drawable/classdesign"
            android:drawableLeft="@drawable/ic_baseline_school_24"
            android:text="Class Hsc"
            android:textStyle="bold"
            app:backgroundTint="@null">

        </Button>


    </androidx.cardview.widget.CardView>















</RelativeLayout>