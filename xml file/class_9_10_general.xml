<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >



    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"

        android:layout_marginEnd="10dp"

        android:layout_marginBottom="8dp"


        android:foreground="?selectableItemBackground"
        app:cardCornerRadius="15dp"
        app:cardElevation="30dp"
        app:cardUseCompatPadding="true"
        tools:context=".cNine">


        <Button
            android:id="@+id/sscmath"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/subdesign"
            android:drawableLeft="@drawable/math"
            android:text="সাধারণ গণিত    "
            android:textSize="20dp"
            android:textStyle="bold"
            app:backgroundTint="@null">

        </Button>

        <Button
            android:id="@+id/sscbangla"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="75dp"
            android:background="@drawable/subdesign"
            android:drawableLeft="@drawable/bangla"
            android:text="বাংলা ১ম পত্র     "
            android:textSize="20dp"
            android:textStyle="bold"
            app:backgroundTint="@null">

        </Button>

        <Button
            android:id="@+id/sscbangla2"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="135dp"
            android:background="@drawable/subdesign"
            android:drawableLeft="@drawable/bansec"
            android:text="বাংলা ২য় পত্র     "
            android:textSize="20dp"
            android:textStyle="bold"
            app:backgroundTint="@null">

        </Button>

        <Button
            android:id="@+id/sscenglish"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="195dp"
            android:background="@drawable/subdesign"
            android:drawableLeft="@drawable/eng"
            android:text="English 1st paper"
            android:textSize="15dp"
            android:textStyle="bold"
            app:backgroundTint="@null">

        </Button>

        <Button
            android:id="@+id/sscenglish2"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="255dp"
            android:background="@drawable/subdesign"
            android:drawableLeft="@drawable/engsec"
            android:text="English 2nd paper"
            android:textSize="15dp"
            android:textStyle="bold"
            app:backgroundTint="@null">

        </Button>


        <Button
            android:id="@+id/sscict"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="315dp"
            android:background="@drawable/subdesign"
            android:drawableLeft="@drawable/sos"
            android:text="তথ্য ও যোগাযোগ প্রযুক্তি"
            android:textSize="15dp"
            android:textStyle="bold"
            app:backgroundTint="@null">

        </Button>

        <LinearLayout


            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="385dp"
            android:background="@color/black"
            android:orientation="vertical"

            >

            <TextView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="center"
                android:padding="15dp"
                android:text="Select Your Group"

                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold"


                >

            </TextView>

            <Button
                android:id="@+id/sscscience"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:background="@drawable/groupdesign"
                android:drawableLeft="@drawable/lal_24"
                android:text="Science"
                android:textSize="20dp"
                android:textStyle="bold"
                app:backgroundTint="@null">

            </Button>

            <Button
                android:id="@+id/sscbusiness"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:background="@drawable/groupdesign"
                android:drawableLeft="@drawable/nil_24"
                android:text="Business"
                android:textSize="20dp"
                android:textStyle="bold"
                app:backgroundTint="@null">

            </Button>

            <Button
                android:id="@+id/sscarts"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:background="@drawable/groupdesign"
                android:drawableLeft="@drawable/arts"
                android:text="Arts"
                android:textSize="20dp"
                android:textStyle="bold"
                app:backgroundTint="@null">

            </Button>


        </LinearLayout>


    </androidx.cardview.widget.CardView>


    <RelativeLayout
        android:id="@+id/homeMain"
        android:layout_width="205dp"
        android:layout_height="39dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="55dp"
        android:layout_marginBottom="1dp"
        android:background="#E3E7EC">

        <ImageView
            android:id="@+id/homeBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="120dp"
            android:src="@drawable/home" />

        <TextView
            android:id="@+id/home1"
            android:layout_width="51dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="60dp"
            android:layout_marginBottom="9dp"
            android:text="Home"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"></TextView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/proMain"
        android:layout_width="205dp"
        android:layout_height="39dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="55dp"
        android:layout_marginBottom="1dp"
        android:background="#E3E7EC">

        <ImageView
            android:id="@+id/proBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="109dp"
            android:src="@drawable/pro1" />


        <TextView
            android:id="@+id/pro1"
            android:layout_width="51dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="58dp"
            android:layout_marginBottom="6dp"
            android:text="Profile"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold">

        </TextView>
    </RelativeLayout>

</RelativeLayout>


