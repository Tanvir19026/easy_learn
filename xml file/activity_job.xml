<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".jobActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="301dp"
            android:layout_height="561dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="160dp"
            android:padding="20dp"
            android:textStyle="bold"
            app:cardBackgroundColor="#7ef0fc"
            app:cardCornerRadius="20dp">

            <Button
                android:id="@+id/jobBcs"
                android:layout_width="200dp"
                android:layout_height="71dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/subdesign"
                android:text="BCS"
                android:textSize="27dp"
                android:textStyle="bold"
                android:drawableLeft="@drawable/bcs"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/jobIelts"
                android:layout_width="200dp"
                android:layout_height="71dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="150dp"
                android:background="@drawable/subdesign"
                android:drawableLeft="@drawable/ielts"
                android:text="IELTS"
                android:textSize="27dp"
                android:textStyle="bold"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/jobBank1"
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="250dp"
                android:background="@drawable/subdesign"
                android:drawableLeft="@drawable/bank"
                android:text="Bank"
                android:textSize="27dp"
                android:textStyle="bold"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/jobInterview"
                android:layout_width="200dp"
                android:layout_height="71dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="350dp"
                android:background="@drawable/subdesign"
                android:drawableLeft="@drawable/interview"
                android:text="Interview"
                android:textSize="22dp"
                android:textStyle="bold"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/jobPrimary"
                android:layout_width="200dp"
                android:layout_height="71dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="450dp"
                android:background="@drawable/subdesign"
                android:drawableLeft="@drawable/ielts"
                android:text="Primary"
                android:textSize="25dp"
                android:textStyle="bold"
                app:backgroundTint="@null" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <TextView
        android:layout_width="198dp"
        android:layout_height="71dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="201dp"
        android:layout_marginBottom="724dp"
        android:text="Subjects"
        android:textSize="50dp"
        android:textStyle="bold"></TextView>


    <RelativeLayout
        android:id="@+id/homeMain"
        android:layout_width="205dp"
        android:layout_height="39dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="55dp"
        android:layout_marginBottom="1dp"
        android:background="#E3E7EC">

        <ImageView
            android:id="@+id/homeBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="120dp"
            android:src="@drawable/home" />

        <TextView
            android:id="@+id/home1"
            android:layout_width="51dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="60dp"
            android:layout_marginBottom="9dp"
            android:text="Home"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"></TextView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/proMain"
        android:layout_width="205dp"
        android:layout_height="39dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="55dp"
        android:layout_marginBottom="1dp"
        android:background="#E3E7EC">

        <ImageView
            android:id="@+id/proBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="109dp"
            android:src="@drawable/pro1" />


        <TextView
            android:id="@+id/pro1"
            android:layout_width="51dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="58dp"
            android:layout_marginBottom="6dp"
            android:text="Profile"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold">

        </TextView>
    </RelativeLayout>
</RelativeLayout>