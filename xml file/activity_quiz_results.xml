<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuizResults"
    android:orientation="vertical"
    android:background="#95BF63">

    <ImageView
        android:id="@+id/cong"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="534dp"
        android:src="@drawable/result13"></ImageView>

    <TextView
        android:id="@+id/SUccessTextView"
        android:layout_width="250dp"
        android:layout_height="40dp"

        android:layout_alignParentEnd="true"
        android:layout_marginTop="350dp"
        android:layout_marginEnd="70dp"
        android:gravity="center"
        android:text="Quiz Completed !!!"
        android:textColor="#FFEB3B"
        android:textSize="30dp"
        android:textStyle="bold"></TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/SUccessTextView"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/correctAnswer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Correct Answer : 0"
            android:textSize="25dp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/incorrectAnswer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Wrong Answer  : 0"

            android:textSize="25dp"
            android:textStyle="bold"></TextView>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/startNewQuiz"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="83dp"
        android:background="@drawable/round_back_color10"
        android:gravity="center"
        android:text="Start New Quiz"
        android:textSize="18dp"
        android:textStyle="bold">

    </androidx.appcompat.widget.AppCompatButton>


</RelativeLayout>